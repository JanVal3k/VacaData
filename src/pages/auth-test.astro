---
import { getSession } from 'auth-astro/server';

const session = await getSession(Astro.request);
---

<html>
<head>
  <title>Auth Test</title>
  <style>
    body {
      font-family: system-ui, sans-serif;
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem;
      line-height: 1.6;
    }
    pre {
      background: #f1f1f1;
      padding: 1rem;
      border-radius: 4px;
      overflow: auto;
    }
    .auth-panel {
      border: 1px solid #ddd;
      padding: 1rem;
      border-radius: 4px;
      margin-bottom: 1rem;
    }
    button, a.button {
      background: #0070f3;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
  </style>
</head>
<body>
  <h1>Prueba de Autenticación</h1>
  
  <div class="auth-panel">
    {session ? (
      <div>
        <h3>Autenticado como:</h3>
        <p><strong>Nombre:</strong> {session.user.name}</p>
        <p><strong>Email:</strong> {session.user.email}</p>
        {session.user.image && <img src={session.user.image} alt="Foto de perfil" width="100" />}
        <form action="/api/auth/signout" method="post" style="margin-top: 1rem;">
          <button type="submit">Cerrar sesión</button>
        </form>
      </div>
    ) : (
      <div>
        <p>No has iniciado sesión</p>
        <a href="/api/auth/signin/google?callbackUrl=/auth-test" class="button">Iniciar sesión con Google</a>
      </div>
    )}
  </div>
  
  <h3>Información de sesión:</h3>
  <pre>{JSON.stringify(session, null, 2)}</pre>
</body>
</html>